@model List<AlienTorpedoSite.Models.TipoEvento>

@{
    <!-- Informando layout a ser utilizado caso o user esteja logado -->
    Layout = "_Layout_logado";
}

<br />
<br />
<div class="panel panel-primary" style="border-color: black;">
    <div class="panel-heading" style="background: black;">
        <h3 class="panel-title">Tipos de Evento</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th style="width: 10%; text-align:center">Código</th>
                    <th style="width: 90%;">Descrição</th>
                    @*<th style="width: 40%;">Ações</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var evento in @Model)
                {
                    <tr>
                        <td style="text-align:center; padding-left:0px;">@evento.CdTipoEvento</td>
                        <td>@evento.NmTipoEvento</td>
                        @*<td>
                            <a asp-action="Deletar" asp-route-id="@evento.CdTipoEvento" title="Deletar Tipo Evento"><span class="glyphicon glyphicon-remove alert-danger" aria-hidden="true"></span></a>&nbsp;&nbsp;
                            <a asp-action="Editar" title="Editar Tipo Evento"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>