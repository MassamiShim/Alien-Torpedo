@model AlienTorpedoSite.ViewModels.Conta.ContaViewModel

<!-- Informando qual layout utilizar para a página, nesse caso ele utilizará o padrão que já foi configurado no viewStart.cshtml-->
@{
    Layout = "_Layout_logado";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Informações da sua Conta:</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="Cd_usuario" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <span class="form-control">@Model.Cd_usuario</span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nm_email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <span class="form-control">@Model.Nm_email</span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nm_usuario" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <span class="form-control">@Model.Nm_usuario</span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Dt_inclusao" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <span class="form-control">@Model.Dt_inclusao.ToLocalTime()</span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Dv_ativo" class="col-md-2 control-label"></label>
                @if (Model.Dv_ativo == true)
                {
                    <div class="col-md-10">
                        <span class="form-control">Ativo</span>
                    </div>
                }
                else
                {
                    <div class="col-md-10">
                        <span class="form-control">Ativo</span>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="panel-footer" style="text-align:right">
        <a asp-action="Cancelar" asp-route-Cd_usuario="@Model.Cd_usuario" title="Cancelar Conta"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar Conta</a>
        &nbsp;
        <a asp-action="Editar" asp-route-Cd_usuario="@Model.Cd_usuario" title="Editar Conta"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar Conta</a>
    </div>
</div>

@if (ViewBag.Codigo == 0)
{
    <div class="alert alert-success">
        @ViewBag.Mensagem
    </div>
}
    
@if (ViewBag.Codigo == 1)
{
    <div class="alert alert-danger">
        @ViewBag.Mensagem
    </div>
}

@section Scripts
    {
    @{ Html.RenderPartial("_ValidationScriptsPartial"); }
}